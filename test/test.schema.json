{
    "type": "object",
    "properties": {
        "server": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                }
            },
            "required": [
                "host",
                "port"
            ]
        },
        "database": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            },
            "required": [
                "url",
                "username",
                "password"
            ]
        },
        "logging": {
            "type": "object",
            "properties": {
                "level": {
                    "type": "string",
                    "enum": [
                        "debug",
                        "info",
                        "warn",
                        "error"
                    ]
                },
                "file": {
                    "type": "string"
                }
            },
            "required": [
                "level",
                "file"
            ]
        }
    },
    "required": [
        "server",
        "database",
        "logging"
    ]
}